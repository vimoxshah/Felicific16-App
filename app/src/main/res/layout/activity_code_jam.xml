<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".CodeJam">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="#d1f4b6"
        android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Code Jam"
        android:textSize="18dp"
        android:gravity="center"
        android:id="@+id/codejam_title"
        android:textAllCaps="true"
        android:textColor="#813d0f"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="The College level contest will challenge students to improve their coding capability.Rounds scheme "
        android:textSize="15dp"
        android:textStyle="normal"
        android:lineSpacingExtra="4dp"
        android:gravity="start"
        android:textAlignment="textStart"
        android:textColor="#212121" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="1.EliminationRound: Participants will be provided question paper with fundamental questions of different programming concepts and features.
Time given: 1 hour."
            android:textSize="15dp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textColor="#212121" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="2.Final Round : Participants will be given problem statement.
They shall be asked to implement optimize code for given problem.
Time given: 1.5 hours."


            android:textSize="15dp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textColor="#212121" />
        android:textColor="#212121" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Rules:"


            android:textSize="15dp"
        android:textStyle="italic"
        android:lineSpacingExtra="4dp"
        android:gravity="start"
        android:textAlignment="textStart"
        android:textColor="#212121" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text=" - Internet connection won't be provided for any
        of the rounds."

            android:textSize="15dp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textColor="#212121" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" - Participants per team are two."

            android:textSize="15dp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textColor="#212121" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="  -Top 25 teams from Elimination round will
            participate in final round."
            android:textSize="15dp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textColor="#212121" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="  -Tie breaker: Indentation, Code Reuse and Use of   Language Specific Features shall be preferred."
            android:textSize="15dp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textColor="#212121" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="  Team Size: 2"
            android:textSize="15dp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textColor="#212121" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Date:  11 March,2016 "
            android:textSize="15dp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textColor="#212121" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Registration Fee:    60/-per Team "
            android:textSize="15dp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textColor="#212121" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="10"
            android:text=" Contact: \n CE : Shaunak Thaker \n Mobile : 8264229587 \n IT : Ajay Devjani \n Email : ajayrdevjani@hotmail.com \n Mobile:9428704664 "
            android:textSize="15dp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textColor="#212121" />








    </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>


