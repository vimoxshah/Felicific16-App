<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_relative_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.felicific.application.codesweeper.Branch_event_details">


    <org.felicific.application.codesweeper.MyTextView
        android:padding="2dp"
        android:id="@+id/tv_totalresult"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#000000"
        android:textSize="19dp"
        android:text="Event's Details"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>





    <!-- Framelayout to display Fragments -->
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >




        <org.felicific.application.codesweeper.CustomRecyclerView
            android:id="@+id/eventdetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />


    </FrameLayout>


</LinearLayout>
