<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.felicific.application.codesweeper.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    >
                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardCornerRadius="3dp"
                        android:id="@+id/card_tech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:elevation="25dp"
                        android:translationZ="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:onClick="show"
                        android:longClickable="true"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_tech"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="10dp">
                                <org.felicific.application.codesweeper.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Technical"
                                    android:textSize="19dp"
                                    android:id="@+id/tech_title"
                                    android:textAllCaps="true"
                                    android:textColor="#9c27b0"/>
                                <org.felicific.application.codesweeper.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Any sufficiently advanced magic is indistinguishable from technology"
                                    android:textColor="#8e8888"
                                    android:textSize="14dp"
                                    android:textAlignment="inherit"
                                    android:layout_marginTop="6dp"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardCornerRadius="3dp"
                        android:id="@+id/card_techcult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:elevation="25dp"
                        android:translationZ="7dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_techcult"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="10dp">
                                <org.felicific.application.codesweeper.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Central Technical"
                                    android:textSize="19dp"
                                    android:id="@+id/conf_title"
                                    android:textAllCaps="true"
                                    android:textColor="#6ac72f"/>
                                <org.felicific.application.codesweeper.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Any sufficiently advanced magic is indistinguishable from technology"
                                    android:textColor="#8e8888"
                                    android:textSize="14dp"
                                    android:textAlignment="inherit"
                                    android:layout_marginTop="6dp"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardCornerRadius="3dp"
                        android:id="@+id/card_cultural"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_marginTop="15dp"
                        android:elevation="25dp"
                        android:translationZ="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_cultural"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="10dp">
                                <org.felicific.application.codesweeper.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Cultural"
                                    android:textSize="19dp"
                                    android:id="@+id/cultural_title"
                                    android:textAllCaps="true"
                                    android:textColor="#d98328"/>
                                <org.felicific.application.codesweeper.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Culture is all the things and ideas ever devised by humans working and living together."
                                    android:textColor="#8e8888"
                                    android:textSize="13dp"
                                    android:textAlignment="inherit"
                                    android:layout_marginTop="6dp"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>





                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardCornerRadius="3dp"
                        android:id="@+id/card_conf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_marginTop="15dp"
                        android:elevation="25dp"
                        android:translationZ="3dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_conf"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="10dp">
                                <org.felicific.application.codesweeper.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="NCRTTM 2016"
                                    android:textSize="19dp"
                                    android:id="@+id/techcult_title"
                                    android:textAllCaps="true"
                                    android:textColor="#67a9df"/>
                                <org.felicific.application.codesweeper.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="National Conference on Recent Trends in Technology and Management "
                                    android:textColor="#8e8888"
                                    android:textSize="14dp"
                                    android:textAlignment="inherit"
                                    android:layout_marginTop="6dp"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>








                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
